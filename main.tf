terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

# 1. Configure the AWS Provider
provider "aws" {
  region = "us-east-1"
}

# 2. Generate a random ID so your bucket name is unique globally
resource "random_id" "bucket_suffix" {
  byte_length = 4
}

# 3. Create the S3 Bucket (Storage)
resource "aws_s3_bucket" "website_bucket" {
  bucket = "devops-portfolio-${random_id.bucket_suffix.hex}"
}

# 4. Set the bucket for Website Hosting
resource "aws_s3_bucket_website_configuration" "website_config" {
  bucket = aws_s3_bucket.website_bucket.id

  index_document {
    suffix = "index.html"
  }
}

# 5. Allow Public Access (Crucial for a website)
resource "aws_s3_bucket_public_access_block" "public_access" {
  bucket = aws_s3_bucket.website_bucket.id

  block_public_acls       = false
  block_public_policy     = false
  ignore_public_acls      = false
  restrict_public_buckets = false
}

# 6. The Policy: Tells AWS "Everyone can view these files"
resource "aws_s3_bucket_policy" "allow_public_access" {
  bucket = aws_s3_bucket.website_bucket.id
  policy = <<EOF
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "PublicReadGetObject",
      "Effect": "Allow",
      "Principal": "*",
      "Action": "s3:GetObject",
      "Resource": "arn:aws:s3:::${aws_s3_bucket.website_bucket.id}/*"
    }
  ]
}
EOF
}

# 7. Output the URL so we can find it later
output "website_url" {
  value = aws_s3_bucket_website_configuration.website_config.website_endpoint
}